{
    "name": "dyi-adblocker",
    "version": "1.0",
    "description": "A simple adblocker",
    "permissions": ["tabs", "webRequest","webNavigation", "webRequestBlocking", "<all_urls>"],
    "background": {
      "scripts": ["blocked_domains.js", "background.js"]
    },
    "browser_action": {
      "default_popup": "popup.html"
    },
    "manifest_version": 2
  }